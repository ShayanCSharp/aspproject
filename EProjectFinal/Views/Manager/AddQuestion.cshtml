@model EProjectFinal.Models.Question

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Add Question - Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Top navigation and sidebar omitted for brevity -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-action="Dashboard">Manager Panel</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Logout-->
        <a asp-action="Logout" asp-controller="Account" class="btn btn-danger ms-auto">Logout</a>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-action="Dashboard">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Test</div>
                        <a class="nav-link" asp-action="ViewTests" asp-controller="Manager">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard-list"></i></div>
                            View Tests
                        </a>
                        <a class="nav-link" asp-action="ViewQuestions" asp-controller="Manager">
                            <div class="sb-nav-link-icon"><i class="fas fa-question-circle"></i></div>
                            View Questions
                        </a>
                        <div class="sb-sidenav-menu-heading">Candidates</div>
                        <a class="nav-link" href="charts.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            View Candidates
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Manager
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Add New Question</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Manager")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Add Question</li>
                    </ol>
                    <partial name="_AdminMessage"></partial>
                    <div class="card mb-4">
                        <div class="card-body">
                            <form asp-action="AddQuestion" asp-controller="Manager" method="post">
                                <div class="mb-3">
                                    <label for="TestId" class="form-label">Select Test</label>
                                    <select asp-for="TestId" class="form-control" asp-items="ViewBag.Tests">
                                        <option value="">-- Select a Test --</option>
                                    </select>
                                    <span asp-validation-for="TestId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="QuestionText" class="form-label">Question</label>
                                    <input asp-for="QuestionText" class="form-control" placeholder="Enter question text" />
                                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Option1" class="form-label">Option 1</label>
                                    <input asp-for="Option1" class="form-control" placeholder="Enter first option" />
                                    <span asp-validation-for="Option1" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Option2" class="form-label">Option 2</label>
                                    <input asp-for="Option2" class="form-control" placeholder="Enter second option" />
                                    <span asp-validation-for="Option2" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Option3" class="form-label">Option 3</label>
                                    <input asp-for="Option3" class="form-control" placeholder="Enter third option" />
                                    <span asp-validation-for="Option3" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Option4" class="form-label">Option 4</label>
                                    <input asp-for="Option4" class="form-control" placeholder="Enter fourth option" />
                                    <span asp-validation-for="Option4" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CorrectAnswer" class="form-label">Correct Answer</label>
                                    <input asp-for="CorrectAnswer" class="form-control" placeholder="Enter correct answer (e.g., Option1, Option2)" />
                                    <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                                </div>

                                <!-- New Field for Marks -->
                                <div class="mb-3">
                                    <label asp-for="Marks" class="form-label">Marks</label>
                                    <input asp-for="Marks" type="number" class="form-control" placeholder="Enter marks (1-5)" min="1" max="5" />
                                    <span asp-validation-for="Marks" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">Add Question</button>
                                <a asp-action="ViewQuestions" class="btn btn-secondary ms-2">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/admin/js/scripts.js"></script>
</body>
</html>
