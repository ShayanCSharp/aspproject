@model EProjectFinal.Models.Test

@{
    Layout = null;
}

<!DOCTYPE html>2023

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Create Test - Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-action="Dashboard">Manager Panel</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Logout-->
        <a asp-action="Logout" asp-controller="Account" class="btn btn-danger ms-auto">Logout</a>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" asp-action="Dashboard">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Test</div>
                        <a class="nav-link" asp-action="ViewTests" asp-controller="Manager">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard-list"></i></div>
                            View Tests
                        </a>
                        <a class="nav-link" asp-action="ViewQuestions" asp-controller="Manager">
                            <div class="sb-nav-link-icon"><i class="fas fa-question-circle"></i></div>
                            View Questions
                        </a>
                        <div class="sb-sidenav-menu-heading">Candidates</div>
                        <a class="nav-link" asp-action="ViewCandidates" asp-controller="Manager">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            View Candidates
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Manager
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Edit Test</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Manager")">Dashboard</a></li>
                        <li class="breadcrumb-item active">Edit Test</li>
                    </ol>
                    <partial name="_AdminMessage"></partial>
                    <!-- Create Test Form -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form asp-action="EditTest" method="post">
                                <input type="hidden" asp-for="TestId" />

                                <div class="mb-3">
                                    <label asp-for="TestName" class="form-label">Test Name</label>
                                    <input asp-for="TestName" class="form-control" />
                                    <span asp-validation-for="TestName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TotalQuestions" class="form-label">Total Questions</label>
                                    <input asp-for="TotalQuestions" type="number" class="form-control" />
                                    <span asp-validation-for="TotalQuestions" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MaxMarks" class="form-label">Max Marks</label>
                                    <input asp-for="MaxMarks" type="number" class="form-control" />
                                    <span asp-validation-for="MaxMarks" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TimeLimit" class="form-label">Time Limit (minutes)</label>
                                    <input asp-for="TimeLimit" type="number" class="form-control" />
                                    <span asp-validation-for="TimeLimit" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a asp-action="ViewTests" class="btn btn-secondary ms-2">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
            
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/admin/js/scripts.js"></script>
</body>
</html>
